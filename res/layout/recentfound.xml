<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecentFound">

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"/>

    <Button
        android:id="@+id/moreInfoInRecentFound"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="More Info"
        android:background="@drawable/customized_btn"/>

    <Button
        android:id="@+id/ShareInRecnetFound"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/moreInfoInRecentFound"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/moreInfoInRecentFound"
        android:padding="10dp"
        android:text="Share"
        android:background="@drawable/customized_btn"/>

</RelativeLayout>